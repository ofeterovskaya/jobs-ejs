<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs") %>

<div class="container mt-3">
    <h1 class="text-center">Add a New Job</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/jobs" method="POST" class="mt-3">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <div class="mb-6">
                    <label for="company" class="form-label tight-label">Company:</label>
                    <input type="text" class="form-control" id="company" name="company" required maxlength="50">
                </div>
                <div class="mb-6">
                    <label for="position" class="form-label tight-label">Position:</label>
                    <input type="text" class="form-control" id="position" name="position" required maxlength="100">
                </div>
                <div class="mb-6">
                    <label for="status" class="form-label tight-label">Status:</label>
                    <select class="form-select" id="status" name="status">
                        <option value="interview">Interview</option>
                        <option value="declined">Declined</option>
                        <option value="pending" selected>Pending</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="createdBy" class="form-label tight-label">Created By:</label>
                    <input type="text" class="form-control" id="createdBy" name="createdBy" required>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary" style="background-color: rgb(34, 82, 34);">Add Job</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("partials/footer.ejs") %>